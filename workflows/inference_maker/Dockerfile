FROM public.ecr.aws/lambda/python:3.10
COPY --from=piplock /Pipfile.lock ${LAMBDA_TASK_ROOT}
COPY . ${LAMBDA_TASK_ROOT}

ARG BUCKET_NAME
ENV BUCKET_NAME=$BUCKET_NAME
ARG PREDICTIONS_DESTINATION_PREFIX
ENV PREDICTIONS_DESTINATION_PREFIX=$PREDICTIONS_DESTINATION_PREFIX
ARG XGBOOST_MODEL_PATH
ENV XGBOOST_MODEL_PATH=$XGBOOST_MODEL_PATH
ARG RANDOM_FOREST_MODEL_PATH
ENV RANDOM_FOREST_MODEL_PATH=$RANDOM_FOREST_MODEL_PATH

RUN pip install pipenv
RUN pipenv requirements > requirements.txt
RUN pip install -r requirements.txt --target "${LAMBDA_TASK_ROOT}"
CMD [ "lambda_function.lambda_handler" ]`
